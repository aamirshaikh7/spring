<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config/>

    <bean id="deviceBean" class="com.demo.BeanAutowiringAnnotation.Device">
        <property name="series" value="200" />
        <property name="operatingSystem" value="Windows 11" />
    </bean>

    <bean id="ramBean" class="com.demo.BeanAutowiringAnnotation.Ram">
        <property name="pins" value="700" />
        <property name="brand" value="Xs" />
        <property name="ramType" value="DDR4" />
        <property name="memory" value="4 GB" />
        <property name="memorySpeed" value="2.05 GHz" />
    </bean>

    <bean id="ramBean2" class="com.demo.BeanAutowiringAnnotation.Ram">
        <property name="pins" value="900" />
        <property name="brand" value="XXs" />
        <property name="ramType" value="DDR4" />
        <property name="memory" value="8 GB" />
        <property name="memorySpeed" value="5.05 GHz" />
    </bean>

</beans>
